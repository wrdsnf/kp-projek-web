rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isStaff() {
      return isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'teller']
      );
    }

    function isAdmin() {
      return isAuthenticated() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // Queues collection
    match /queues/{queueId} {
      // Anyone can read queue status
      allow read: if true;
      // Only staff can update status/numbers (via transaction usually, but this is general)
      allow update: if isStaff();
      // Admin can manage queues
      allow create, delete: if isAdmin();
    }

    // Queue logs
    match /queue_logs/{logId} {
      // Public can read logs? strictly maybe current calls. allow public read for now.
      allow read: if true;
      // Public can create logs (take queue) - validation happens in transaction logic or cloud function
      // But for client-side transaction:
      allow create: if true; 
      // Only staff can update (call/skip)
      allow update: if isStaff();
    }
    
    // User profiles
    match /users/{userId} {
      // Users can read their own profile
      allow read: if isAuthenticated() && request.auth.uid == userId;
      // Admin can manage users
      allow read, write: if isAdmin();
    }
  }
}

